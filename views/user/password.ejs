<% include ../partials/header %>
<% include ../partials/nav %>
<% include ../partials/messages %>

<script src="http://localhost:3000/assets/js/passwordValidation.js" charset="utf-8"></script>
<div class="container-fluid principalBackground">
  <div class="row justify-content-center align-items-center" style="height:100vh;">
    <div class="col-md-4 col-12">
      <form action="/user/password?_method=PUT" method="post">
        <p class="h4 text-center">Cambiar contraseña</p>
        <div class="form-group">
          <label for="formGroupExampleInput">Contraseña actual</label>
          <input type="password" class="form-control" id="formGroupExampleInput" placeholder="Contraseña actual" required autocomplete="off" name="password">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Nueva contraseña</label>
          <input type="password" class="form-control" id="txtNewPassword" placeholder="Contraseña" required autocomplete="off" name="newPassword">
        </div>
        <div class="form-group">
          <label for="formGroupExampleInput2">Confirmar nueva contraseña</label>
          <input type="password" class="form-control" id="txtConfirmPassword" placeholder="Contraseña" required onkeyup="checkPasswordMatch();" autocomplete="off" name="confirmPassword" >
        </div>
        <div class="registrationFormAlert text-left" id="divCheckPasswordMatch"></div>
        <button type="submit" class="btn btn-secondary btn-lg btn-block">Cambiar</button>
      </form>
    </div>
  </div>
</div>
<% include ../partials/footer %>
